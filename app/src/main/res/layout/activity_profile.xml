<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3490DC">


        <TextView
            android:id="@+id/txt_alertify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/noto_serif_bold"
            android:text="ALERTIFY"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dep_admin_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/txt_alertify"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dp"
            android:translationZ="999dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/dep_admin_image"
            android:layout_marginTop="-55dp"
            android:background="@drawable/login_shape"
            android:backgroundTint="@color/white"
            android:paddingBottom="20dp">


            <ImageView
                android:id="@+id/name_icon"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="100dp"
                android:layout_toEndOf="@+id/name_icon"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/dep_admin_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/name_icon"
                android:textColor="#7C7B7B"
                android:textSize="15sp" />

            <View
                android:id="@+id/name_underline"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/dep_admin_name"
                android:layout_marginTop="20dp"
                android:background="#B1B1B1" />


            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_below="@+id/name_underline"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/mail" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_underline"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/email_icon"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/dep_admin_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:layout_toEndOf="@+id/email_icon"
                android:textColor="#7C7B7B"
                android:textSize="15sp" />

            <View
                android:id="@+id/email_underline"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/dep_admin_email"
                android:layout_marginTop="20dp"
                android:background="#B1B1B1" />

            <ImageView
                android:id="@+id/police_station_icon"
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:layout_below="@+id/email_underline"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/police_station" />

            <TextView
                android:id="@+id/police_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_underline"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/police_station_icon"
                android:text="Police Station"
                android:textColor="@color/black"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/dep_admin_police_station"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/police_station"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:layout_toEndOf="@+id/police_station_icon"
                android:textColor="#7C7B7B"
                android:textSize="15sp" />

            <View
                android:id="@+id/police_station_underline"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/dep_admin_police_station"
                android:layout_marginTop="20dp"
                android:background="#B1B1B1" />


            <ImageView
                android:id="@+id/password_icon"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_below="@+id/police_station_underline"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/key" />

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/police_station_underline"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/password_icon"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/password_edit_btn"
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:layout_below="@+id/password"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/pencil" />

            <TextView
                android:id="@+id/change_dep_admin_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/password_edit_btn"
                android:layout_toEndOf="@+id/password_icon"
                android:text="change password"
                android:textColor="#7C7B7B"
                android:textSize="15sp" />


        </RelativeLayout>


    </RelativeLayout>

</ScrollView>