<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3490DC">


        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/txt_alertify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/status_icon"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/noto_serif_bold"
            android:text="ALERTIFY"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_details_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/txt_alertify"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dp"
            android:translationZ="999dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/user_details_image"
            android:layout_marginTop="-55dp"
            android:background="@drawable/login_shape"
            android:backgroundTint="@color/white"
            android:paddingBottom="20dp">


            <ImageView
                android:id="@+id/name_icon"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="100dp"
                android:layout_toEndOf="@+id/name_icon"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/user_details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/name_icon"
                android:textColor="#7C7B7B"
                android:textSize="15sp" />

            <View
                android:id="@+id/name_underline"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/user_details_name"
                android:layout_marginTop="20dp"
                android:background="#B1B1B1" />


            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_below="@+id/name_underline"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/mail" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_underline"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/email_icon"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/user_details_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:layout_toEndOf="@+id/email_icon"
                android:textColor="#7C7B7B"
                android:textSize="15sp" />

            <View
                android:id="@+id/email_underline"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/user_details_email"
                android:layout_marginTop="20dp"
                android:background="#B1B1B1" />


            <ImageView
                android:id="@+id/cnic_icon"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_below="@+id/email_underline"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/cnic" />

            <TextView
                android:id="@+id/cnic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_underline"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/cnic_icon"
                android:text="CNIC No"
                android:textColor="@color/black"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/user_details_cnic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cnic"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:layout_toEndOf="@+id/cnic_icon"
                android:textColor="#7C7B7B"
                android:textSize="15sp" />

            <View
                android:id="@+id/cnic_underline"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/user_details_cnic"
                android:layout_marginTop="20dp"
                android:background="#B1B1B1" />


            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_below="@+id/cnic_underline"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/phone" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cnic_underline"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/phone_icon"
                android:text="Phone No"
                android:textColor="@color/black"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/user_details_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:layout_toEndOf="@+id/phone_icon"
                android:textColor="#7C7B7B"
                android:textSize="15sp" />

        </RelativeLayout>


    </RelativeLayout>

</ScrollView>